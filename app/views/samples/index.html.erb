<link rel="stylesheet" href="./css/normalize.css">
<link rel="stylesheet" href="./css/style.css">
<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @samples.each do |sample| %>
  <tr>
    <td><%= sample.content %></td>
       <td><%= link_to '詳細を確認する', sample_path(sample.id) %></td>
       <td><%= link_to "編集する", edit_sample_path(sample.id), data: { confirm: '本当に編集していいですか？' } %></td>
       <td><%= link_to 'ブログを削除する', sample_path(sample.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく投稿する', new_sample_path %><br>
<%= link_to 'トップへ戻る', root_path %>
<footer class="footer"></footer>
